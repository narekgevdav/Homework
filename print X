//task1

function printX(n){
let raw = "";
for(i=0;i<n; i++){
	for(j=0; j<n; j++){
if(i===j || i === n-j-1){
raw += "* ";
} else{
raw += "  ";
} 
}raw += "\n"; 
}
console.log(raw)
} 


//task 3

function task3(arr){
let numberCount=0
let stringCount =0
for (let i = 0; i < arr.length; i++){
if(typeof(arr[i])==="number"){
numberCount++
} else {
stringCount++
}
}
console.log(`Numbers: ${numberCount}, Strings: ${stringCount}`)
}
